    "ewondo_lesson_01": {
      "id": "ewondo_lesson_01",
      "courseId": "ewondo_basics",
      "title": "Greetings and Basic Courtesy",
      "description": "Learn how to greet people and use basic courteous expressions in Ewondo.",
      "order": 1,
      "type": "interactive",
      "status": "available",
      "estimatedDuration": 30,
      "thumbnailUrl": "",
      "createdAt": "2025-09-25T10:00:00Z",
      "updatedAt": "2025-09-25T10:00:00Z",
      "contents": [
        {
          "id": "content_001",
          "type": "text",
          "order": 1,
          "title": "Introduction to Ewondo Greetings",
          "content": {
            "text": "Ewondo greetings are essential for daily interactions. The tone and time of day matter greatly in Ewondo culture.",
            "language": "ewondo"
          }
        },
        {
          "id": "content_002",
          "type": "vocabulary",
          "order": 2,
          "title": "Key Vocabulary",
          "content": {
            "words": [
              {
                "word": "Mboté",
                "pronunciation": "/ᵐbote/",
                "meaning": "Hello (general greeting)",
                "example": "Mboté, mam wam! (Hello, my mother!)",
                "audioUrl": ""
              },
              {
                "word": "Mboté o bibóm",
                "pronunciation": "/ᵐbote o bibom/",
                "meaning": "Good morning",
                "example": "Mboté o bibóm, tara! (Good morning, father!)",
                "audioUrl": ""
              },
              {
                "word": "Akiba",
                "pronunciation": "/akiba/",
                "meaning": "Goodbye",
                "example": "Akiba nlé! (Goodbye, my friend!)",
                "audioUrl": ""
              },
              {
                "word": "Matónda",
                "pronunciation": "/matonda/",
                "meaning": "Thank you",
                "example": "Matónda mingi! (Thank you very much!)",
                "audioUrl": ""
              }
            ]
          }
        },
        {
          "id": "content_003",
          "type": "audio",
          "order": 3,
          "title": "Pronunciation Practice",
          "content": {
            "audioUrl": "",
            "transcript": "Listen to native speakers demonstrate proper Ewondo greetings with correct tones and intonation.",
            "duration": 120
          }
        },
        {
          "id": "content_004",
          "type": "exercise",
          "order": 4,
          "title": "Practice Exercise",
          "content": {
            "questions": [
              {
                "type": "multiple_choice",
                "question": "How do you say 'Good morning' in Ewondo?",
                "options": ["Mboté", "Mboté o bibóm", "Akiba", "Matónda"],
                "correct": 1,
                "explanation": "Mboté o bibóm specifically means 'Good morning', combining the general greeting with the time reference."
              },
              {
                "type": "fill_blank",
                "question": "Complete: _____ mingi! (Thank you very much!)",
                "answer": "Matónda",
                "explanation": "Matónda is the standard way to say 'thank you' in Ewondo."
              }
            ]
          }
        }
      ]
    },
