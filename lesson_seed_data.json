          "type": "vocabulary",
          "order": 1,
          "title": "Market Vocabulary",
          "content": {
            "words": [
              {
                "word": "Mam",
                "pronunciation": "/mam/",
                "meaning": "Water",
                "example": "Na loba mam. (I want water.)",
                "audioUrl": ""
              },
              {
                "word": "Diba",
                "pronunciation": "/diba/",
                "meaning": "Food",
                "example": "Diba ni ekó? (How much is the food?)",
                "audioUrl": ""
              },
              {
                "word": "Mbongo",
                "pronunciation": "/ᵐbongo/",
                "meaning": "Money",
                "example": "Mbongo yam si te. (I don't have money.)",
                "audioUrl": ""
              }
            ]
          }
        },
        {
          "id": "content_007",
          "type": "dialogue",
          "order": 2,
          "title": "Market Conversation",
          "content": {
            "dialogue": [
              {
                "speaker": "Buyer",
                "text": "Mboló! Diba ni ekó?",
                "translation": "Hello! How much is the food?"
              },
              {
                "speaker": "Seller",
                "text": "Diba ni talo tatu.",
                "translation": "The food costs three hundred."
              },
              {
                "speaker": "Buyer",
                "text": "Ó múná pési?",
                "translation": "Can you reduce the price?"
              }
            ]
          }
        }
